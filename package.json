    "@iconify-json/mdi": "^1.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.0",
    "@preact/preset-vite": "^2.8.0",
    "@rollup/plugin-typescript": "^11.1.0",
    "@types/node": "^20.12.0",
    "@unocss/cli": "^0.59.0",
