{
  "name": "@sscreator/ui",
  "private": false,
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "version": "0.24.1",
  "type": "module",
  "repository": "https://github.com/FHU-yezi/sscreator-ui.git",
  "author": "Yezi (https://github.com/FHU-yezi)",
  "keywords": [
    "preact",
    "components",
    "design",
    "unocss"
  ],
  "license": "MIT",
  "files": [
    "dist"
  ],
  "module": "./dist/main.js",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "types": "./dist/main.d.ts"
    },
    "./sscreator-ui.css": "./dist/sscreator-ui.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && unocss 'src/**/*.tsx' --preflights=false -o dist/sscreator-ui.css",
    "publish": "npm publish",
    "check:lint": "biome lint .",
