{
  "name": "@sscreator/ui",
  "private": false,
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "version": "0.26.0",
  "type": "module",
  "repository": "https://github.com/FHU-yezi/sscreator-ui.git",
  "author": "Yezi (https://github.com/FHU-yezi)",
  "keywords": ["preact", "components", "design", "unocss"],
  "license": "MIT",
  "files": ["dist"],
  "module": "./dist/main.js",
  "exports": {
    ".": {
      "import": "./dist/main.js",
